<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginLeft="@dimen/_16dp"
        android:layout_marginRight="@dimen/_16dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@drawable/bg_faq_item"
        android:orientation="horizontal"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            android:orientation="vertical"
            android:weightSum="15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_8dp"
                android:weightSum="8">

                <ImageView
                    android:id="@+id/imgDislike"
                    android:layout_width="@dimen/_36dp"
                    android:layout_height="@dimen/_36dp"
                    android:layout_margin="@dimen/_4dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_thumb_down_black_18dp" />

                <ImageView
                    android:id="@+id/imgBuy"
                    android:layout_width="@dimen/_36dp"
                    android:layout_height="@dimen/_36dp"
                    android:layout_margin="@dimen/_4dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_thumb_up_black_18dp" />

                <ImageView
                    android:id="@+id/imgShare"
                    android:layout_width="@dimen/_36dp"
                    android:layout_height="@dimen/_36dp"
                    android:layout_margin="@dimen/_4dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_share_black_18dp" />

                <ImageView
                    android:id="@+id/imgFavorite"
                    android:layout_width="@dimen/_36dp"
                    android:layout_height="@dimen/_36dp"
                    android:layout_margin="@dimen/_4dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_shopping_cart_black_18dp" />

                <ImageView
                    android:id="@+id/imgLike"
                    android:layout_width="@dimen/_36dp"
                    android:layout_height="@dimen/_36dp"
                    android:layout_margin="@dimen/_4dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_favorite_border_black_18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/txtModelName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_16dp"
                android:layout_weight="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="TextView"
                    android:textSize="@dimen/_24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="9">

                <TextView
                    android:id="@+id/txtType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16dp"
                    android:layout_weight="5"
                    android:gravity="right|center_vertical"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16dp"
                    android:layout_weight="4"
                    android:gravity="left|center_vertical"
                    android:text="TextView" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>