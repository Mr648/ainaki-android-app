<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_16dp"
        android:layout_marginTop="@dimen/_16dp"
        fab:menu_animationDelayPerItem="0"
        fab:menu_colorNormal="#FFB805"
        fab:menu_colorPressed="#F2AB00"
        fab:menu_colorRipple="#D99200"

        fab:menu_fab_hide_animation="@anim/jump_from_down"
        fab:menu_fab_show_animation="@anim/jump_to_down"
        fab:menu_labels_hideAnimation="@anim/fab_scale_up"
        fab:menu_labels_showAnimation="@anim/fab_scale_down"
        fab:menu_labels_style="@style/MenuLabelsStyle"
        fab:menu_openDirection="down"
        fab:menu_shadowColor="#444">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabPurchase"
            style="@style/MenuButtonsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"
            app:fab_size="mini" />
        <!--fab:fab_label="Purchase"-->

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabFavorite"
            style="@style/MenuButtonsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"

            app:fab_size="mini" />
        <!--fab:fab_label="Favorite"-->

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabShare"
            style="@style/MenuButtonsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_share"

            app:fab_size="mini" />
        <!--fab:fab_label="Share"-->

    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>