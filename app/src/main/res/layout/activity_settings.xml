<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".ui.activity.SettingActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ToolBarStyle">
            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_16dp"
                android:text="Toolbar Title" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <TextView
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginStart="@dimen/_16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:text="اخبار و اعلان‌ها"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginBottom="@dimen/_12dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/swShowNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16dp"
            android:text="نمایش اعلان ها"
            android:textAlignment="textStart" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16dp"
            android:text="دریافت اخبار"
            android:textAlignment="textStart" />


        <TextView
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginStart="@dimen/_16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:text="سایر تنظیمات"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginBottom="@dimen/_12dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary"/>
        <android.support.v7.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16dp"
            android:text="استفاده از داده‌ کمتر"
            android:textAlignment="textStart" />
        <TextView
            android:padding="@dimen/_16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="توجه! فعالسازی این گزینه ممکن است باعث تاخیر در بارگزاری تصاویر شود."/>


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
